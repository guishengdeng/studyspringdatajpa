<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="threadPool" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="queueCapacity" value="200" />
        <property name="corePoolSize" value="5" />
        <property name="maxPoolSize" value="100" />
        <property name="keepAliveSeconds" value="300" />
    </bean>

    <bean id="taobaoClient" class="com.taobao.api.DefaultTaobaoClient">
        <constructor-arg type="java.lang.String" value="${sms.alidayu.url}" />
        <constructor-arg type="java.lang.String" value="${sms.alidayu.appkey}" />
        <constructor-arg type="java.lang.String" value="${sms.alidayu.secret}" />
    </bean>

    <bean id="smsSendRequest" class="com.taobao.api.request.AlibabaAliqinFcSmsNumSendRequest" />

    <bean id="smsPublisher" class="com.biz.gbck.smscenter.publisher.SmsPublisher" >
        <property name="smsProviderList">
            <list>
                <ref bean="alidayuProvider" />
                <ref bean="yunpianProvider" />
            </list>
        </property>
        <property name="mailPublisher" ref="mailPublisher" />
        <property name="threadPool" ref="threadPool" />
    </bean>

    <bean id="mailPublisher" class="com.biz.gbck.smscenter.publisher.MailPublisher">
        <property name="mailSender" ref="mailSender" />
        <property name="mailFrom" value="${mail.username}" />
        <property name="threadPool" ref="threadPool" />
    </bean>

    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${mail.host}" />
        <property name="username" value="${mail.username}" />
        <property name="password" value="${mail.password}" />
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">true</prop>
                <prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
                <prop key="mail.smtp.timeout">25000</prop>
            </props>
        </property>
    </bean>

</beans>
